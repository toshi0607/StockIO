<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockIO.View.StockEditPage">
  <StackLayout>
    <Label Text="管理したいものの名前"/>
    <Entry x:Name="Name" Text="{Binding Name}"/>
    <Label Text="残り個数"/>
    <Entry x:Name="Amount" Text="{Binding Amount}" Keyboard="Numeric"/>
    <Label Text="アラートを出す個数"/>
    <Entry x:Name="ThresholdAmount" Text="{Binding ThresholdAmount}" Keyboard="Numeric"/>
    <Button x:Name="UpdateButton" Text="保存"/>
  </StackLayout>

</ContentPage>