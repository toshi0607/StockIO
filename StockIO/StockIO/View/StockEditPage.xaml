<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockIO.View.StockEditPage">
  <StackLayout>
    <Label Text="管理したいものの名前"/>
    <Entry Text="{Binding Stock.Name}"/>
    <Label Text="残り個数"/>
    <Entry Text="{Binding Stock.Amount}" Keyboard="Numeric"/>
    <Label Text="アラートを出す個数"/>
    <Entry Text="{Binding Stock.ThresholdAmount}" Keyboard="Numeric"/>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>
      <Button x:Name="DeleteButton"
              IsEnabled="{Binding !IsBusy}"
              Command="{Binding DeleteStockCommand}"
              Text="削除"
              BackgroundColor="#D9534F"/>
      <Button x:Name="SaveButton"
              IsEnabled="{Binding !IsBusy}"
              Command="{Binding SaveStockCommand}"
              Text="保存"
              Grid.Column="1"/>
    </Grid>
  </StackLayout>

</ContentPage>